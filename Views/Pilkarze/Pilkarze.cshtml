@model List<Kluby.Models.Pilkarze>
@{
    ViewBag.Title = "Piłkarze";
}

<h2>Piłkarze</h2>

<style>
    table {
        width: 100%;
        border-collapse: collapse;
    }
    th, td {
        border: 1px solid #ffffff;
        padding: 8px;
        text-align: left;
    }
    th {
        background-color: #37c754;
    }
    tr:nth-child(even) {
        background-color: #0987db;
    }
    tr:hover {
        background-color: #37c754;
    }
    a {
        text-decoration: none;
        color: inherit;
    }
    a:hover {
        text-decoration: underline;
    }
    .form-container {
        max-width: 600px;
        margin: 20px 0;
    }
    .form-container div {
        display: flex;
        align-items: center;
        margin-bottom: 10px;
    }
    .form-container label {
        width: 150px;
        margin-right: 10px;
    }
    .form-container input {
        flex: 1;
        padding: 5px;
    }
    .form-container button {
        margin-top: 10px;
        padding: 10px 20px;
        background-color: #37c754;
        border: none;
        color: white;
        cursor: pointer;
    }
    .form-container button:hover {
        background-color: #2e9e44;
    }
</style>

<table>
    <thead>
        <tr>
            <th>
                <a asp-action="Pilkarze" asp-route-sortOrder="id_asc">ID ▲</a> |
                <a asp-action="Pilkarze" asp-route-sortOrder="id_desc">ID ▼</a>
            </th>
            <th>
                <a asp-action="Pilkarze" asp-route-sortOrder="name_asc">Imię ▲</a> |
                <a asp-action="Pilkarze" asp-route-sortOrder="name_desc">Imię ▼</a>
            </th>
            <th>
                <a asp-action="Pilkarze" asp-route-sortOrder="surname_asc">Nazwisko ▲</a> |
                <a asp-action="Pilkarze" asp-route-sortOrder="surname_desc">Nazwisko ▼</a>
            </th>
            <th>
                <a asp-action="Pilkarze" asp-route-sortOrder="age_asc">Wiek ▲</a> |
                <a asp-action="Pilkarze" asp-route-sortOrder="age_desc">Wiek ▼</a>
            </th>
            <th>
                <a asp-action="Pilkarze" asp-route-sortOrder="year_join_asc">Rok dołączenia ▲</a> |
                <a asp-action="Pilkarze" asp-route-sortOrder="year_join_desc">Rok dołączenia ▼</a>
            </th>
            <th>
                <a asp-action="Pilkarze" asp-route-sortOrder="year_end_asc">Rok zakończenia ▲</a> |
                <a asp-action="Pilkarze" asp-route-sortOrder="year_end_desc">Rok zakończenia ▼</a>
            </th>
            <th>Akcje</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var pilkarz in Model)
        {
            <tr>
                <td>@pilkarz.id_pilkarza</td>
                <td>@pilkarz.imie</td>
                <td>@pilkarz.nazwisko</td>
                <td>@pilkarz.wiek</td>
                <td>@pilkarz.Rok_dolaczenia_do_klubu</td>
                <td>@pilkarz.Rok_zakonczenia_pracy_w_klubie</td>
                <td>
                    <form asp-action="DeletePilkarz" method="post" style="display:inline;">
                        <input type="hidden" name="id" value="@pilkarz.id_pilkarza" />
                        <button type="submit">Usuń</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

<h2>Dodaj nowego piłkarza</h2>

<form asp-action="AddPilkarz" method="post" class="form-container">
    <div>
        <label>Imię:</label>
        <input type="text" name="imie" required />
    </div>
    <div>
        <label>Nazwisko:</label>
        <input type="text" name="nazwisko" required />
    </div>
    <div>
        <label>Wiek:</label>
        <input type="number" name="wiek" required />
    </div>
    <div>
        <label>Rok dołączenia:</label>
        <input type="number" name="Rok_dolaczenia_do_klubu" required />
    </div>
    <div>
        <label>Rok zakończenia:</label>
        <input type="number" name="Rok_zakonczenia_pracy_w_klubie" required />
    </div>
    <button type="submit">Dodaj</button>
</form>
